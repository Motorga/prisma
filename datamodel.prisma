type User {
	id: ID! @id
	email: String! @unique
	password: String
	lastname: String
	firstname: String
	bike: String
	open: Int @default(value:0)
	promotion: String
	token: String
	role: Role @default(value:USER)
	status: Status @default(value:PENDING)
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}

type Event {
	id: ID! @id
	name: String!
	description: String
	date: DateTime!
	owner: User! @relation(name: "Owner")
	participants: [User] @relation(name: "Participants")
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}

type Marker {
	id: ID! @id
	color: String!
	position: Json!
	user: User! @relation(name: "User")
}

enum Status {
	ENABLED
	PENDING
	DISABLED
}
enum Role {
	USER
	ADMIN
}